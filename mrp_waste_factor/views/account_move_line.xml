<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_move_line_inherit_form" model="ir.ui.view">
        <field name="name">account.move.line.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="inside">
                <group string="Waste Factor">
                    <field name="forecast_waste_factor" readonly="1"/>
                    <field name="actual_waste_factor" readonly="1"/>
                    <field name="waste_factor_variance" readonly="1"/>
                    <field name="forecast_waste_cost" readonly="1"/>
                    <field name="actual_waste_cost" readonly="1"/>
                    <field name="forecast_waste_quantity" readonly="1"/>
                    <field name="actual_waste_quantity" readonly="1"/>
                </group>

            </xpath>
        </field>
    </record>

</odoo>